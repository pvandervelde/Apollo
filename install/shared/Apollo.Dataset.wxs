<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension "
     xmlns:netfx="http://schemas.microsoft.com/wix/NetFxExtension">

    <?include $(var.SolutionDir)Dependencies.wxi ?>

    <Fragment>
        <!-- 
            Define all the files that will be installed in the program files folder.
            The user may decide to install in a different location which will be
            reflected in a change to the value of the INSTALLLOCATION directory.
        -->
        <DirectoryRef Id="INSTALLLOCATION">
            <!-- Apollo.Core.Dataset.exe -->
            <Component Id="C.Apollo.Core.Dataset.Exe"
                       Guid="{BCB6762B-3F74-41A7-A45F-7C664E9ED425}">
                <File Id="File.Apollo.Core.Dataset.Exe"
                      Name="Apollo.Core.Dataset.exe"
                      DiskId="1"
                      Source="$(var.Apollo_BinFolder)\Apollo.Core.Dataset.exe"
                      KeyPath="yes" />

                <!-- EventLog -->
                <!--
                <?if $(var.Platform) = x64 ?>
                    <util:EventSource Log="Application"
                                      Name="Apollo.Core.Dataset"
                                      EventMessageFile="[NETFRAMEWORK40FULLINSTALLROOTDIR64]EventLogMessages.dll" />
                <?else ?>
                    <util:EventSource Log="Application"
                                      Name="Apollo.Core.Dataset"
                                      EventMessageFile="[NETFRAMEWORK40FULLINSTALLROOTDIR]EventLogMessages.dll" />
                <?endif ?>
                -->
            </Component>

            <!-- Apollo.Core.Dataset.exe.config -->
            <Component Id="C.Apollo.Core.Dataset.Exe.Config"
                       Guid="{10BA503D-2995-4486-9885-1AB014895FA3}">
                <File Id="File.Apollo.Core.Dataset.Exe.Config"
                      Name="Apollo.Core.Dataset.exe.config"
                      DiskId="1"
                      Source="$(var.Apollo_BinFolder)\Apollo.Core.Dataset.exe.config"
                      KeyPath="yes" />
            </Component>

            <!-- Apollo.Core.Base.dll -->
            <Component Id="C.Apollo.Core.Extensions.dll"
                       Guid="{5A528E8B-CEEC-4431-B78F-EF17D9E365FD}">
                <File Id="File.Apollo.Core.Extensions.dll"
                      Name="Apollo.Core.Extensions.dll"
                      DiskId="1"
                      Source="$(var.Apollo_BinFolder)\Apollo.Core.Extensions.dll"
                      KeyPath="yes" />
            </Component>
            
            <!-- Mono.Options.dll -->
            <Component Id="C.Mono.Options.dll"
                       Guid="{B898F10A-8EE2-47D3-859C-279B5AD8A074}">
                <File Id="File.Mono.Options.dll"
                      Name="Mono.Options.dll"
                      DiskId="1"
                      Source="$(var.Apollo_BinFolder)\Mono.Options.dll"
                      KeyPath="yes" />
            </Component>

            <!-- QuickGraph.dll -->
            <Component Id="C.QuickGraph.dll"
                       Guid="{1C6EFE39-0762-428F-86B3-F21B6E3DA0F2}">
                <File Id="File.QuickGraph.dll"
                      Name="QuickGraph.dll"
                      DiskId="1"
                      Source="$(var.Apollo_BinFolder)\QuickGraph.dll"
                      KeyPath="yes" />
            </Component>
        </DirectoryRef>

        <!-- The feature for the main program. -->
        <ComponentGroup Id="CGroup.Apollo.Core.Dataset">
            <ComponentRef Id="C.Apollo.Core.Dataset.Exe" />
            <ComponentRef Id="C.Apollo.Core.Dataset.Exe.Config" />
            <ComponentRef Id="C.Apollo.Core.Extensions.dll" />
            <ComponentRef Id="C.Mono.Options.dll" />
            <ComponentRef Id="C.QuickGraph.dll" />

            <ComponentGroupRef Id="CGroup.Apollo.Base" />
        </ComponentGroup>
    </Fragment>
</Wix>