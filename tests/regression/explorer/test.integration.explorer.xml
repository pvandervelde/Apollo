<?xml version="1.0" encoding="utf-8" ?>
<sherlock configurationVersion="1.2">
    <!--
        Provide some human readable information for the test. This information
        is used in the reports.
    -->
    <description>
        <product>${ProductName}</product>
        <version>${ProductVersion}</version>
        <testpurpose>Integration tests for ${ProductName}</testpurpose>
    </description>

    <!--
        Define the environments that are required for the test. Environments are selected by limiting the
        selection through constraints.
    -->
    <environments>
        <environment name="Client">
            <constraints>
                <!-- 
                    Indicates on which operating systems the tests have to be run.
                    Note that you can specify what ever you want, however the tests
                    will not be run if the operating system is not recognised 

                    Service pack names are designated with SP and a number, e.g. SP1

                    Operating system cultures follow the RFC 4646 specification: 
                    The name is a combination of and ISO 639 two-letter lowercase
                    culture code associated with a language and an ISO 3166 two-
                    letter uppercase subculture code associated with a country or 
                    region. Examples are: en-US (US english), jp-JP (japanese) etc.
                    see here: 
                    http://msdn.microsoft.com/en-us/library/system.globalization.cultureinfo.aspx
                    for more information.
                -->
                <operatingsystem name="Windows7"
                                 servicepack="SP1"
                                 culture="en-US"
                                 architecturepointersize="64"/>
            </constraints>
        </environment>
    </environments>

    <!-- 
        The test steps that need to be taken for the test to be completed 
    -->
    <teststeps>
        <!-- Copy the installers -->
        <msi steporder="0"
             environment="Client"
             onfailure="Stop">
            <file><![CDATA[${FileApolloInstaller}]]></file>
            <params>
            </params>
            <includeinreport includesystemlog="true">
            </includeinreport>
        </msi>
        
        <!-- Copy the test files -->
        <xcopy steporder="1" 
               environment="Client"
               onfailure="Stop">
            <destination><![CDATA[${DirRemoteTestFiles}]]></destination>
            <base><![CDATA[${DirLocalTestFiles}]]></base>
            <paths>
                <file><![CDATA[${DirLocalTestFiles}\Test.Regression.Explorer.exe]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Test.Regression.Explorer.exe.config]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Autofac.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Castle.Core.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Lokad.Shared.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\NLog.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Nuclei.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Nuclei.Build.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Nuclei.Configuration.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\Nuclei.Diagnostics.dll]]></file>
                <file><![CDATA[${DirLocalTestFiles}\TestStack.White.dll]]></file>
            </paths>
            <includeinreport includesystemlog="true">
            </includeinreport>
        </xcopy>
        
        <!-- Run the test application -->
        <console steporder="2" 
                 environment="Client" 
                 onfailure="Continue">
            <exe><![CDATA[${DirRemoteTestFiles}\Test.Regression.Explorer.exe]]></exe>
            <params>
            </params>
            <includeinreport includesystemlog="true">
                <directory><![CDATA[C:\Users\test\AppData\Local\My Company Ltd\Apollo\0.1\logs]]></directory>
                <directory><![CDATA[C:\Users\test\AppData\Local\My Company Ltd\Apollo.Core.Dataset\0.1\logs]]></directory>
                <directory><![CDATA[${DirRemoteTestFiles}\test.regression.explorer.log]]></directory>
            </includeinreport>
        </console>
    </teststeps>

    <completednotification>
        <file>
            <path><![CDATA[${DirSherlockLog}]]></path>
        </file>
    </completednotification>
</sherlock>
