<Window x:Class="Apollo.ProjectExplorer.Views.Shell.ShellWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Regions="http://www.codeplex.com/prism"
        xmlns:lex="http://schemas.root-project.org/xaml/presentation"
        xmlns:infrastructure="clr-namespace:Apollo.ProjectExplorer"
        Title="{lex:LocText Key=MainWindow_Title, Dict=Resources, Assembly=Apollo.ProjectExplorer, DesignValue=Window_Title}"
        Width="800"
        Height="600"
        Closing="HandleShellClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Menu bar -->
        <ItemsControl Grid.Row="0"
                      Regions:RegionManager.RegionName="{x:Static infrastructure:RegionNames.MainMenu}" />

        <!-- Content -->
        <Border Grid.Row="1"
                Background="LightSteelBlue"
                Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Top -->
                    <RowDefinition Height="Auto" />
                    <!-- Content -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ContentControl Grid.Row="0"
                                Regions:RegionManager.RegionName="{x:Static infrastructure:RegionNames.TopPane}"
                                Margin="5, 5, 5, 5"
                                Padding="5, 5, 5, 5" />

                <GridSplitter Grid.Row="0"
                              Height="5" />

                <ContentControl Grid.Row="1"
                                Regions:RegionManager.RegionName="{x:Static infrastructure:RegionNames.Content}"
                                Margin="5, 5, 5, 5"
                                Padding="5, 5, 5, 5" />
            </Grid>
        </Border>
        <!-- Status bar -->
        <StatusBar Grid.Row="2">

        </StatusBar>
    </Grid>
</Window>
